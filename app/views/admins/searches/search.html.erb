<h1>検索結果</h1>

<% if @range == "user" %>

	<h1>ユーザー一覧</h1>

	<table>
		<thead>
			<tr>
				<th>ユーザーID</th>
				<th>ユーザー名</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= link_to "詳細", admins_user_path(user) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

<% elsif @range == "post" %>

<h1>投稿一覧</h1>

	<table>
		<thead>
			<tr>
				<th>ユーザー</th>
				<th>タイトル</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td><%= post.user.name %></td>
				<td><%= post.title %></td>
				<td><%= link_to "詳細", admins_post_path(post) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

<% else %>

<h1>コメント一覧</h1>

	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>コメント内容</th>
				<th>ユーザー名</th>
			</tr>
		</thead>
		<tbody>
			<% @comments.each do |comment| %>
			<tr>
				<td><%= comment.id %></td>
				<td><%= comment.content %></td>
				<td><%= comment.user.name %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

<% end %>