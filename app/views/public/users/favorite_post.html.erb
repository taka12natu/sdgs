<div class="row">

	<div class="col-3">
		<%= render 'public/users/mypage_side', user: @user  %>
	</div>

	<div class="col-9">
		<h3>お気に入り投稿</h3>
			<% @fav_posts.each do |fav_post| %>
				<div class="row mt-3">
					<div class="col-2">
						<div class="card">
							<%= link_to user_path(fav_post.user) do %>
								<%= attachment_image_tag(fav_post.user, :image, fallback: "no_image.jpg", class: "card-img-top") %>
								<p class="card-text text-center text-dark py-1"><%= fav_post.user.name %></p>
							<% end %>
						</div>
					</div>
					<div class="col-10">
						<div class="card">
							<h5 class="card-header"><%= fav_post.title %><span class="float-right"><small>投稿日:<%= fav_post.created_at.strftime('%Y/%m/%d') %></small></span></h5>
				 			<div class="card-body">
				    			<p class="card-text"><%= fav_post.body.truncate(100) %></p>
				    			<%= link_to "全文表示", post_path(fav_post.user), class: "btn btn-outline-dark btn-sm float-right" %>
				  			</div>
				  		</div>
			  		</div>
			  	</div>
			<% end %>
		<div class="mt-3">
			<%= paginate @fav_posts %>
		</div>
	</div>
</div>
