<div class="row">

	<div class="col-3">
		<%= render 'public/users/mypage_side', user: @user  %>
	</div>

	<div class="col-9">
		<h3>投稿一覧</h3>
			<% @posts.each do |post| %>
			<div class="card mt-3">
				<h5 class="card-header"><%= post.title %><span class="float-right"><small>投稿日:<%= post.created_at.strftime('%Y/%m/%d') %></small></span></h5>
			 	<div class="card-body">
			    	<p class="card-text"><%= post.body.truncate(100) %></p>
			    	<%= link_to "全文表示", post_path(@user), class: "btn btn-outline-dark btn-sm float-right" %>
			  	</div>
			</div>
			<% end %>
		<div class="mt-3">
			<%= paginate @posts %>
		</div>
	</div>
</div>