<% if user == current_user %>
	<%= link_to "投稿", new_post_path, class: "btn btn-md btn-primary btn-block" %>
<% elsif user != current_user %>
	<% if current_user.following?(user) %>
		<%= link_to "unfollow", user_relationship_path(user), method: :delete, class: "btn btn-md btn-danger btn-block", remote: true %>
	<% else %>
		<%= link_to "follow", user_relationships_path(user), method: :post, class: "btn btn-md btn-primary btn-block", remote: true %>
	<% end %>
<% end %>
