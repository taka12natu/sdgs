<% if post.favorited_by?(current_user,post) %>
	<%= link_to post_favorites_path(post), method: :delete, remote: true do %>
		<i class="fas fa-heart text-danger float-right">
		<span class="text-dark ">お気に入り解除</span></i>
	<% end %>
<% else %>
	<%= link_to post_favorites_path(post), method: :post, remote: true do %>
		<i class="far fa-heart text-danger float-right">
		<span class="text-dark">お気に入り登録</span></i>
	<% end %>
<% end %>
