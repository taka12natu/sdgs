<div class="row">
<div class="col-5 mx-auto mt-5">

  <div class="card">
    <div class="card-body px-5 py-4">

    <h2 class="pb-2 card-title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group">
    <%= f.label :名前, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード, class: "form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード確認, class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

<!-- カテゴリーよりorganizationかbelongingの方が良いかも -->
  <div class="form-group">
    <%= f.label :所属, class: "form-label" %>
    <%= f.radio_button :affiliation, :individual, checked: true %>
    <%= f.label :affiliation, "個人", value: :individual, class: "d-inline-block" %>
    <%= f.radio_button :affiliation, :company %>
    <%= f.label :affiliation, "企業", value: :company, class: "d-inline-block pl-2" %>
    <%= f.radio_button :affiliation, :npo %>
    <%= f.label :affiliation, "NPO", value: :npo, class: "d-inline-block pl-2"%>
    <%= f.radio_button :affiliation, :other %>
    <%= f.label :affiliation, "その他団体", value: :other, class: "d-inline-block pl-2" %>
  </div>

  <div class="form-group">
    <%= f.submit "登録", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

</div>
</div>
</div>
</div>
<%#= render "public/shared/links" %>
