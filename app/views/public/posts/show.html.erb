<h1>投稿詳細</h1>

<h2>タイトル</h2>
<%= @post.title %>

<h2>内容</h2>
<%= @post.body %>

<p>画像</p>
<% if @post.post_images.present? %>
  <% @post.post_images.each do |image| %>
    <%= attachment_image_tag(image, :image, :fill, 300, 300) %>
  <% end %>
<% end %>

<h2>goal</h2>
<%= @post.goal.name %>

<h2>tag</h2>
<% @post.post_tags.each do |post_tag| %>
	<%= post_tag.tag.name %>
<% end %>

<%= link_to "投稿編集", edit_post_path(@post) %>
<%= link_to "投稿一覧", posts_path %>

<% if @post.favorited_by?(current_user) %>
	<%= link_to "いいね済み", post_favorites_path(@post), method: :delete %>
<% else %>
	<%= link_to "いいね", post_favorites_path(@post), method: :post %>
<% end %>
<%= @post.favorites.count %>件

<p>コメント</p>
	<% if @post.comments.ids.present? %>
		<table>
			<% @post.comments.each do |comment| %>
				<tr>
					<td><%= comment.user.name %></td>
					<td><%= comment.content %></td>
				</tr>
			<% end %>
		</table>
	<% else %>
		<p>コメントはまだありません。</p>
	<% end %>

<%= form_for [@post, @comment] do |f| %>
	<%= f.text_area :content %>
	<%= f.submit %>
<% end %>